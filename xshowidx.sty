\def\showidx@margin{%
   %\leavevmode
   \rlap{\parindent\z@%
         \if@xshowidx
         \vbox to\z@{\hsize\dimexpr\textwidth+\xshowidx@sep\relax
         \if@showframe\cornerbodyframe\fi
                     \hfill\rlap{\vbox to\z@{\hsize\xshowidx@width\relax
                                       \xshowidx@font%%\parindent0pt
                                       \@nameuse{showidx@\thepage}%
                                       \vss
                                       }%
                                }%
         \vss}%
         \fi 
       }%
}


